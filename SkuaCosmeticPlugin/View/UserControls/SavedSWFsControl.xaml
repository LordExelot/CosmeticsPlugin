<UserControl x:Class="Skua_CosmeticPlugin.View.UserControls.SavedSWFsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Skua_CosmeticPlugin.View.UserControls"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Loaded="UserControl_Loaded"
             mc:Ignorable="d" 
             d:DesignHeight="405"
             d:DesignWidth="800"
             d:Background="#424242"
             d:Foreground="White"
             >

    <UserControl.Resources>
        <ResourceDictionary Source="/Skua_CosmeticPlugin;component/ResourceDir.xaml"/>
    </UserControl.Resources>

    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            
            <!-- Search bar -->
            <TextBox
                Name="SearchTextBox"
                Margin="5"
                materialDesign:HintAssist.Hint="Search sets..."
                materialDesign:TextFieldAssist.HasClearButton="True"
                TextChanged="SearchTextBox_TextChanged"/>
            
            <!-- TreeView for saved sets -->
            <TreeView
                Name="SavedSetsTreeView"
                Grid.Row="1"
                SelectedItemChanged="SavedSetsTreeView_SelectedItemChanged">
            <TreeView.ItemContainerStyle>
                <Style
                    BasedOn="{StaticResource { x:Type TreeViewItem }}"
                    TargetType="{ x:Type TreeViewItem }">
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidForegroundBrush}"/>
                            <Setter Property="Background" Value="{DynamicResource PrimaryHueMidBrush}"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </TreeView.ItemContainerStyle>
        </TreeView>
        </Grid>

        <Line
            Stroke="{DynamicResource PrimaryHueMidBrush}"
            Grid.Column="1"
            Width="1"
            Margin="5"
            X1="0" Y1="0"
            X2="0" Y2="5000"/>

        <Grid
            Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <StackPanel HorizontalAlignment="Left"
                        Orientation="Horizontal"
                        Margin="0,0,3,0">
                <Button Content="+"
                        Name="AddSetButton"
                        Padding="11,0"
                        BorderThickness="0"
                        Background="Transparent"
                        Foreground="{DynamicResource PrimaryHueMidBrush}"
                        Click="AddSetButton_Click"
                        ToolTip="Add currently loaded items as new set"/>
                <Button Content="📌"
                        Name="PinSetButton"
                        Padding="6"
                        BorderThickness="0"
                        Background="Transparent"
                        Foreground="{DynamicResource PrimaryHueMidBrush}"
                        Click="PinSetButton_Click"
                        ToolTip="Pin set to top"/>
            </StackPanel>
            <TextBox
                Name="SetNameTextBox"
                Margin="75,0,75,5"
                HorizontalContentAlignment="Center"
                MaxLength="40"
                materialDesign:HintAssist.Hint="Set name"
                materialDesign:TextFieldAssist.CharacterCounterVisibility="Hidden"
                ToolTip="Set name"/>
            <StackPanel HorizontalAlignment="Right"
                        Orientation="Horizontal"
                        Margin="0,0,3,0">
                <Button Content="🗑️"
                        Name="DeleteSetButton"
                        Padding="6"
                        BorderThickness="0"
                        Background="Transparent"
                        Foreground="{DynamicResource PrimaryHueMidBrush}"
                        Click="DeleteSetButton_Click"
                        ToolTip="Delete selected set"/>
            </StackPanel>

            <local:SetItem x:Name="Helm" Grid.Row="1" DataContext="{Binding CurrentHelm}"/>
            <local:SetItem x:Name="Armor" Grid.Row="2" DataContext="{Binding CurrentArmor}"/>
            <local:SetItem x:Name="Cape" Grid.Row="3" DataContext="{Binding CurrentCape}"/>
            <local:SetItem x:Name="Weapon" Grid.Row="4" DataContext="{Binding CurrentWeapon}"/>
            <local:SetItem x:Name="Pet" Grid.Row="5" DataContext="{Binding CurrentPet}"/>
            <local:SetItem x:Name="Rune" Grid.Row="6" DataContext="{Binding CurrentRune}"/>


            <Grid Grid.Row="7">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Button
                    Name="SetUpdateButton"
                    Content="Update Set"
                    Margin="5,0"
                    Click="SetUpdateButton_Click"
                    ToolTip="Edit the selected set contents"/>
                <Button
                    Grid.Column="1"
                    Name="SetLoadButton"
                    Content="Load Set"
                    Margin="5,0"
                    Click="SetLoadButton_Click"
                    ToolTip="Load selected set to character"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
